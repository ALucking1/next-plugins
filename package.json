{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "eslint-config-prettier": "^2.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "prettier": "^1.10.2",
    "xo": "^0.21.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "xo",
    "test": "npm run lint && NODE_ENV=test nyc ava"
  },
  "xo": {
    "extends": "prettier"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  }
}
